class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int left=0,right=0;
        int zerosCount=0,maxLen=0;

        for(right=0;right<nums.size();right++){

            if(nums[right]==0) zerosCount++;

            while(zerosCount>k){

                if(nums[left]==0) 
                zerosCount--;
                left++;

            }
            maxLen=max(maxLen,right-left+1);

        }
        return maxLen;
        
    }
};
